<Window x:Class="Lab17WpfApp_lect1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab17WpfApp_lect1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:Indicator Width="200" Height="200" Value="{Binding ElementName=slider, Path=Value}"/>
        <Slider  Minimum="0" Maximum="180" x:Name="slider"/>

    </Grid>
</Window>
